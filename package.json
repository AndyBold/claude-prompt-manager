{
  "name": "claude-prompt-manager",
  "version": "0.1.0",
  "description": "CLI tool to manage a library of Claude Code configurations",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "cpm": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/bundled dist/ && cp -r src/skill dist/",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "configuration",
    "cli",
    "developer-tools"
  ],
  "author": "",
  "license": "Unlicense",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/",
    "src/bundled/"
  ],
  "dependencies": {
    "commander": "^12.1.0",
    "diff": "^8.0.0",
    "glob": "^11.0.0",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@types/diff": "^6.0.0",
    "@types/node": "^20.17.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.0"
  }
}
